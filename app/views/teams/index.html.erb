<div class="bigbox">
  <div class="box">
  <h3 class="text-center mt-2 mb-4">Teams</h3>
  
    <table class="table table-striped mt-2">
    <thead class="thead-dark">
        <tr>
        <th>Name</th>
        <th>View </th> 
        <th>Edit </th>
        <th>Delete </th>
      </tr> 
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
           <td><%= team.name  %></td>
           <td> <%= link_to "View", team_path(team), class: "btn btn-dark" %> </td>
           <td><%= link_to "Edit", edit_team_path(team), class: "btn btn-dark" %> </td></td>
           <td>
               <%= link_to("Delete", team_path(team),class:"btn btn-dark",
               :method => :delete) %>
            </td>
          </tr>
        <% end %> 

      </tbody>
    </table>
<%= link_to "Create New Team", new_team_path, class:"btn btn-dark" %>
  </div>
</div>