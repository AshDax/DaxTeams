<div class="bigbox">
  <div class="box">
  <h3 class="text-center mt-2 mb-4">Users</h3>
    <table class="table table-striped mt-2">
      <thead class="thead-dark">
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>View </th>
        <th>Edit </th>
        <th>Delete </th>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
           <td> <%= user.email %></td>
           <td><%= user.role  %></td>
           <td><%= link_to "View" , team_user_url(1, user), class:"btn btn-dark" %>  </td>
           <td><%= link_to "Edit", edit_team_user_path(1, user), class:"btn btn-dark" %></td>
           <td>
              <%= link_to("Delete", team_user_path(1,user), class:"btn btn-dark",
              :method => :delete)  %>
            </td>
          
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

