<div class="bigbox">
  <div class="box">
  <h3 class="text-center mt-2 mb-4">Teams</h3>
  
    <table class="table table-striped mt-2">
    <thead class="thead-dark">
        <tr>
        <th>Name</th>
        <th>View </th> 
        <th>Edit </th>
        <th>Delete </th>
      </tr> 
      </thead>
      <tbody>
        <% @organizations.each do |org| %>
          <tr>
           <td><%= org.name  %></td>
           <td> <%= link_to "View", team_path(team) %> </td>
           <td><%= link_to "Edit", edit_team_path(team) %> </td></td>
           <td>
               <%= link_to("Delete team", team_path(team),
               :data => { :confirm => "Are you sure?" },
               :method => :delete, :class => 'button') %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
<button type="button" class="btn btn-dark"><%= link_to "Create New Team", new_team_path %></button>
  </div>
</div>